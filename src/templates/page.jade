doctype html
html(lang='fa')
  head
    meta(charset='utf-8')
    title
      if page.title !== 'Untitled'
        | #{page.title} |
      | &nbsp;iDevCenter
    if page.metadata.redirect
      meta(http-equiv='refresh', content='0; url=#{page.metadata.redirect}')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='X-UA-Compatible', content='IE=Edge')
    link(rel='stylesheet', href='/assets/vendor/skeleton/normalize.css')
    link(rel='stylesheet', href='/assets/vendor/skeleton/skeleton.css')
    link(rel='stylesheet', href='/assets/css/iransans.css')
    link(rel='stylesheet', href='/assets/css/main.css')
    link(rel='icon', type='image/png', href='/assets/images/favicon.png')
  body
    div.full-width-container#header
      div.container
        div.row
          div.six.columns(style='text-align: left')
            a#logo(href='/')
              img(src='/assets/images/logotype.svg')
          div.six.columns
            span#tagline جامعه مجازی برنامه‌نویسان فارسی زبان

  block content
    != page.html

  div#footer
      div.container
        div.row
          div.twelve.columns
            | ساخته شده با
            span(style='color: #e74c3c;') &nbsp;&hearts;&nbsp;
            | در تهران. از سال ۱۳۸۱ تا امروز.

  if locals.analytics && locals.analytics.google
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', '#{locals.analytics.google}', 'auto');
      ga('send', 'pageview');
